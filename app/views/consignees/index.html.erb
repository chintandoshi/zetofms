<% render :partial =>  'sidebar' %>

<h1>Consignees</h1>
<div id="controls">
  <%=  link_to 'Back', url_for(:controller => "contacts", :action => "index"), :class => "back" %>
</div>
<%=  render :partial => 'consigneefilter' %>
<br/>

<table class="listing">
  <thead>
      <tr class="header">
        <th>  <%= sort_link 'Consignee Name', :consignee_name %>  <%= sort_flag :consignee_name %>  </th>
        <th></th>
      </tr>
  </thead>
  <tbody>
      <% @consignees.each do |consignee| %>
      <tr class="<%= cycle("odd", "even") -%>">
        <td><%=h consignee.consignee_name %></td>
         <td class="invisible"><span>
            <%= link_to "Show",consignee, :class => "showlink" %>
            <%= link_to "Delete", consignee,:class => "dellink", :confirm => 'Are you sure?', :method => :delete %>
         </span></td>
      </tr>
      <% end %>
  </tbody>
</table>


 <div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @consignees %>
  </div>
  <%= will_paginate @consignees, :container => false %>
</div>