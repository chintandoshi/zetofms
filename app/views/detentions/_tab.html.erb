<% if order.detention_enabled? %>
    <% if order.enable_tab_controls? %>
    <span id="toolbar" class="ui-widget-header ui-corner-all">
      <% if permitted_to? :new, Detention.new %>
        <%= link_to 'Add a new detention entry', new_order_detention_path(order), :class => "newbutton" %>
      <% end %>
    </span>
    <% end %>
    <br/> <br/><br/>
    <ol class="sublisting">
    <% detentions.each do |detention| %>
      <li>
        <div id="detention<%= detention.id %>" class="dropdowndetails">
          <%= render :partial => "detentions/detention", :object => detention, :locals => { :order => order}  %>
        </div>
      </li> <br/>
    <%  end %>
    </ol>
<% end %>