<% render :partial => '/shared/sidebar/admin' %>

<h1>Fuel Payment Types</h1>
<br/>
<table class="admin">
  <thead>
      <tr class="header">
        <th>  <%= sort_link 'Description', :description %>  <%= sort_flag :description %>  </th>
        <th></th>
      </tr>
  </thead>
  <tbody>
    <% unless @fuel_payment_types.empty? -%>
          <% @fuel_payment_types.each do |type| %>
          <tr>
             <td><%=h type.name %></td>
             <td class="invisible"><span>
                  <%= link_to 'Delete', type,:class => "dellink",
                    :confirm => 'Are you sure?',
                    :method => :delete %>
             </span></td>
          </tr>
          <% end %>
      <% end %>
   </tbody>
</table>

 <div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @fuel_payment_types %>
  </div>
  <%= will_paginate @fuel_payment_types, :container => false %>
</div>

<% form_for(FuelPaymentType.new) do |f| %>
  <%= error_messages_for :fuel_payment_type%>
  <div id="adminpanel">
      <%= f.label :name, "Fuel Payment Type" %>
      <%= f.text_field :name, :size => 20, :maxlength => 25 %>
      <%= f.submit 'Add', :class => "newbutton" %>
  </div>
<% end %>