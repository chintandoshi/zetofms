<%= javascript_include_tag 'order' %>

<%= link_to 'Cancel', order_path(@order), :class => "closebutton", :style => "float:right;" %>
<h1>Enter planning details for Order #<%= @order.id %> </h1>

<div id="panel">
    <b>Customer :</b> <%=h @order.custaccount.display_name %> <br/>
    <b>Consignor :</b> <%=h @order.consignor.display_name %> <%=h @order.from %>  <br/>
    <b>Consignee :</b> <%=h @order.consignee.display_name %> <%=h @order.to %>  <br/>
    <b>Requested Dispatch Date :</b> <%=h @order.dispatch_date_requested %> <br/>
    <b>Requested Delivery Date :</b> <%=h @order.delivery_date_requested %>
</div>

<% form_for [@order,@planned_order] do |form| %>
  <%= form.error_messages %>
  <% fields_for @planned_order do |f| %>
    <%= render :partial => "form", :object => f, :locals => { :mode => "new"} %>
  <% end %>
  <p>
    <%= form.submit 'Save', :class => "newbutton" %>
    <%= link_to 'Cancel', order_path(@order), :class => "closebutton"%>
  </p>
<% end %>
