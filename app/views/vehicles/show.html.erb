<span id="toolbar" class="ui-widget-header ui-corner-all">
    <%=  global_print_link() %>
    <% if permitted_to? :edit, @vehicle %>
      <%= link_to 'Edit', edit_vehicle_path(@vehicle), :class => "editbutton" %>
    <% end %>
    <% if permitted_to? :destroy, @vehicle %>
      <%= link_to "Delete", @vehicle, :class => "deletebutton", :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
    <% if permitted_to? :attachments, @vehicle %>
      <%= link_to 'Attachments', attachments_vehicle_path(@vehicle), :class => "attachmentsbutton " %>
    <% end %>
    <%= link_to 'Back', vehicles_path, :class => "backbutton" %>
</span>

<h2>Vehicle information</h2 >


<table class="info">
  <tbody>
    <tr>
        <td class="field"> Registration Number:</td> <td>
        <%=h @vehicle.registration_number %></td>
    </tr>
    <tr>
        <td class="field"> Vehicle Manufacturer:</td> <td>
        <%=h @vehicle.make.make_name %></td>
    </tr>
    <tr>
        <td class="field"> Vehicle Model:</td> <td>
        <%=h @vehicle.vmodel.model_name %></td>
    </tr>
    <tr>
        <td class="field"> Products:</td> 
        <td> <ul>
            <% @vehicle.product_types.each do |product| %>
              <li> <%=h product.product_type_name %>  </li>
              <% end %>
        </ul> </td>
    </tr>

  </tbody>
</table>


