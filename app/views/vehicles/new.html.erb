<% render :partial => 'sidebar' %>

<div id="controls">
    <%= link_to 'Cancel', vehicles_path, :class => "cancel" %>
</div>

<h1>Add a new vehicle</h1>

<% form_for(@vehicle) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => "form", :object => f, :locals => { :mode => "new"} %>

  <%= f.submit 'Add Vehicle' %>
  <%= link_to 'Cancel', vehicles_path, :method => 'get'%>

<% end %>