<h1>Listing order_statuses</h1>

<table>
  <tr>
    <th>Order</th>
    <th>Status</th>
    <th>User</th>
    <th>Notes</th>
  </tr>

<% @order_statuses.each do |order_status| %>
  <tr>
    <td><%=h order_status.order_id %></td>
    <td><%=h order_status.status_id %></td>
    <td><%=h order_status.user %></td>
    <td><%=h order_status.notes %></td>
    <td><%= link_to 'Show', order_status %></td>
    <td><%= link_to 'Edit', edit_order_status_path(order_status) %></td>
    <td><%= link_to 'Destroy', order_status, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New order_status', new_order_status_path %>