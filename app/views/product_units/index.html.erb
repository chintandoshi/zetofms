<% render :partial => '/shared/sidebar/admin' %>

<h1>Freight Product Units</h1>
<br/>
<table class="admin">
  <thead>
      <tr class="header">
        <th>  <%= sort_link 'Freight Product Unit', :product_unit_name %>  <%= sort_flag :product_unit_name %>  </th>
        <th></th>
      </tr>
  </thead>
  <tbody>
    <% unless @product_units.empty? -%>
          <% @product_units.each do |type| %>
          <tr>
             <td><%=h type.product_unit_name %></td>
             <td class="invisible"><span>
                  <%= link_to 'Delete', type,:class => "dellink",
                    :confirm => 'Are you sure?',
                    :method => :delete %>
             </span></td>
          </tr>
          <% end %>
      <% end %>
   </tbody>
</table>

 <div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @product_units %>
  </div>
  <%= will_paginate @product_units, :container => false %>
</div>

<% form_for(ProductUnit.new) do |f| %>
  <%= error_messages_for :product_unit %>
  <div id="adminpanel">
      <%= f.label :product_unit_name, "New unit" %>
      <%= f.text_field :product_unit_name, :size => 20, :maxlength => 25 %>
      <%= f.submit 'Add', :class => "button" %>
  </div>
<% end %>








