<%= link_to 'Cancel', order_path(@order), :class => "closebutton", :style => "float:right;" %>
<h1>Editing billing details for Order #<%= @order.id %> </h1>

<%= render :partial => "shared/orders/ordersnapshot", :locals => { :order => @order} %>

<% form_for [@order,@billed_order] do |form| %>
  <%= form.error_messages %>
  <% fields_for @billed_order do |f| %>
    <%= render :partial => "form", :object => f, :locals => { :mode => "edit"} %>
  <% end %>
  <br />
    <%= form.submit 'Save', :class => "newbutton" %>
    <%= link_to 'Cancel', order_path(@order), :class => "closebutton"%>
<% end %>
